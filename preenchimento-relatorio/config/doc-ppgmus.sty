% usar para termos estrangeiros
\newcommand{\eng}[1]{\textit{#1}}

% usar para nomes de obras
\newcommand{\opus}[1]{\textit{#1}}

% usar para nomes de termos
\newcommand{\termo}[1]{\textit{#1}}

% usar para citação integral
\newcommand{\citacao}[1]{``#1''}

% usar para citação integral indentada
\newcommand{\citacaoind}[3]{
  \begin{quote}
    \normalsize
    #1. \cite[#2]{#3}.
  \end{quote}
}

% usar para citação integral indentada com tradução
\newcommand{\citacaoindt}[4]{
  \begin{quote}
    \normalsize
%    \selectlanguage{english}
    {#2}\footnote{
      \selectlanguage{brazil}
      ``{#1}''.
    }.
    \selectlanguage{brazil}
    \cite[#3]{#4}.
  \end{quote}
}


%% kroger: citacao longa
\newcommand{\longquote}[4]{
  \begin{quote}
    \selectlanguage{english}
    {#2}\footnote{\selectlanguage{brazil}``{#1}''.
    } \selectlanguage{brazil}
    {#3}\ifthenelse{\equal{#4}{}}
    {.}
    {#4}
  \end{quote}
}

%% kroger: citacao curta
\newcommand{\shortquote}[4]{
  \selectlanguage{english}
  ``{#2}''\footnote{\selectlanguage{brazil}``{#1}''.
  } \selectlanguage{brazil}
  {#3}\ifthenelse{\equal{#4}{}}{}{#4}
}

